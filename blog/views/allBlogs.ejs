<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>All Blogs</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoA6DQD1KQkQ1p2eQFhF38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    />
    <div class="container mt-3 d-flex flex-wrap gap-3">
      <% blogs.forEach(blog => { %>
      <div class="card" style="width: 16rem">
        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
